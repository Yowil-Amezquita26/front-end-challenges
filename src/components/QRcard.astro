---
export interface Props {
  cardImage?: ImageMetadata;
  cardTitle?: string;
  cardDescription?: string;
}

const {
  cardImage,
  cardTitle = "testing",
  cardDescription = "testing2",
} = Astro.props as Props;
---

<>
  <div class="modal-background">
    <section class="cardStyle">
      <img
        class="QR-image"
        src=`${cardImage.src}`
        alt="codigo qr propocionado por Frontend Mentor"
      />
      <div class="information">
        <h2>{cardTitle}</h2>
        <p>{cardDescription}</p>
      </div>
    </section>
  </div>
</>

<style>
  /* front-end mentor css code */
  .modal-background {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90%;
    height: 70%;
    box-shadow: 0 0 10px 5px rgba(64, 64, 78, 0.2);
    background-color: var(--Grayish-blue);
  }
  .cardStyle {
    margin: 25px;
    padding: 25px;
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 300px;
    height: 400px;
    border-radius: 1rem;
    background-color: white;
    box-shadow: 0 5px rgb(0, 0, 0, 0.1);
  }

  .QR-image {
    /* display: flex;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
    align-items: center; */
    width: 85%;
    height: 55%;
    object-fit: cover;
    border-radius: 20px;
  }

  .information {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  @media (max-width: 555px) {
    .modal-background {
      width: 100%;
      height: 100%;
    }
  }
</style>
