---
export interface Props {
  summary?: object;
}

const {
  summary,
} = Astro.props as Props;
let total = 0
const porcent = (data) =>{
    data.map((e)=>{
      total+=e.score
    },
    )
    total = Math.floor(total/data.length)
    console.log();
    
}
porcent(summary)
console.log();
